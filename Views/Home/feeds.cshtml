@{
    ViewData["Title"] = "Manage Feeds";
}

<section class="section">
	<div class="container">
		<div class="row mb-4">
			<div class="col text-center">
				<h1 class="display-2">My Feeds</h1>
				<a href="/search" class="btn btn-primary btn-round btn-flat btn-lg">Start a new Feed</a>
			</div>
		</div>
		
		<div class="row myFeeds">
			
			<div class="col-md-6">
				<div class="card mb-4 bg-secondary">
					<div class="card-body">
						
						<ul class="feed-legend mx-auto">
					        <li>Truck and Trailer</li>
					        <li>Add</li>
					        <li>IX</li>
						</ul>
						
						<div class="grid mx-auto">
							<div class="step customer">
								<div class="label"></div>
							</div>
							<div class="step integrate">
								<div class="label"></div>
							</div>
							<div class="step merchant invalid">
								<div class="label"></div>
							</div>
						</div>
						<div class="progress">
							<div class="progress-bar bg-secondary progress-bar-striped progress-bar-animated" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">75%</div>
						</div>
					</div>
					<div class="card-footer status text-light">
						<i class="fa fa-circle text-light"></i> Off
						<span>Started on <b>24 Nov 2017</b></span>
					</div>
				</div>
			</div>
			
			<div class="col-md-6">
