@{
    ViewData["Title"] = "Activity";
}


<section class="section">
	<div class="container">
		<div class="row mb-4">
			<div class="col-md-8">
				<h2 class="display-4">Activity</h2>
			</div>
			<div class="col-md-4 text-right">
				<a href="/add-feed" class="btn btn-primary"><i class="fa fa-plus"></i> Create Feed</a>
			</div>
		</div>
		
		<div class="row">
			<div class="col-md-6 mx-auto">
				
				<h3><i class="fa fa-exclamation-circle text-danger"></i> Feed Failed</h3>
				<div class="card text-white bg-danger mb-4">
					<div class="card-body">
						
						<div class="grid mx-auto">
							<div class="step customer">
								<div class="label" data-toggle="tooltip" data-placement="top" title="McCarthy"></div>
							</div>
							<div class="step integrate">
								<div class="label"></div>
							</div>
							<div class="step merchant invalid">
								<div class="label border-danger" data-toggle="tooltip" data-placement="top" title="OLX"></div>
							</div>
						</div>
					</div>
					<div class="card-footer">
						<a class="badge badge-pill badge-light" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample"><i class="fa fa-exclamation-circle"></i> View Errors</a>
						<span class="pull-right">Failed on <b>20 Nov 2017 10:48 am</b></span>
					</div>
				</div>
				<div class="collapse" id="collapseExample">
					<div class="card card-body">
						<dl class="mb-0">
							<div>
								<dt>Created At</dt>
								<dd>December 4, 2017 at 08:12AM</dd>
							</div>
							<div>
								<dt>Company</dt>
								<dd>Details</dd>
							</div>
							<div>
								<dt>Another</dt>
								<dd>Some Details</dd>
							</div>
							<div>
								<dt>Another</dt>
								<dd>Some Details</dd>
							</div>
						</dl>
					</div>
				</div>
			</div>
		</div>
		
	</div>
</section>



