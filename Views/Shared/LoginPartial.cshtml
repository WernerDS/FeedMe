@using Microsoft.AspNetCore.Identity
@using feedme.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="form-inline">
	    <ul class="navbar-nav">
			<li class="nav-item dropdown">
		        <a class="nav-link" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
		          @UserManager.GetUserName(User) <i class="fa fa-chevron-down"></i>
		        </a>
		        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
		          <a class="dropdown-item" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Manage Profile</a>
		          <a class="dropdown-item" href="/accounts">Manage Accounts</a>
		          <a class="dropdown-item" href="#" onclick="document.getElementById('logoutForm').submit();">Sign Out</a>
		        </div>
		    </li>
		    <li class="nav-item"><a class="nav-link" href="">Help</a></li>
		    <li class="nav-item"><a class="nav-link" href=""><i class="fas fa-search"></i></a></li>
	    </ul>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
        <a class="btn btn-primary ml-2" asp-area="" asp-controller="Account" asp-action="Register"><i class="fas fa-user"></i> Sign Up</a>
    </ul>
}

@*UserManager.GetUserName(User)!*@